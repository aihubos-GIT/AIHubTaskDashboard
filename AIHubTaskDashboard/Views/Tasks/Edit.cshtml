@using System.Text.Json
@model JsonElement

@{
    ViewBag.Title = "Edit Task";
    var usersJson = ViewBag.Users as JsonElement? ?? JsonDocument.Parse("[]").RootElement;
    var users = usersJson.ValueKind == JsonValueKind.Array ? usersJson.EnumerateArray() : Enumerable.Empty<JsonElement>();

    int taskId = Model.TryGetProperty("task_id", out var id) ? id.GetInt32() : 0;
    string title = Model.TryGetProperty("title", out var t) ? t.GetString() : "";
    string description = Model.TryGetProperty("description", out var d) ? d.GetString() : "";
    string status = Model.TryGetProperty("status", out var s) ? s.GetString() : "";
    int progress = Model.TryGetProperty("progress_percentage", out var p) ? p.GetInt32() : 0;
    int assigneeId = Model.TryGetProperty("assignee_id", out var aid) ? aid.GetInt32() : 0;
}

<h2>Edit Task #@taskId</h2>

<form asp-action="Edit" asp-route-id="@taskId" method="post" class="row g-3">
    <div class="col-12">
        <label>Title</label>
        <input name="title" class="form-control" value="@title" required />
    </div>
    <div class="col-12">
        <label>Description</label>
        <textarea name="description" class="form-control">@description</textarea>
    </div>
    <div class="col-md-4">
        <label>Status</label>
        <select name="status" class="form-select">
            @foreach (var s in new[] { "To Do", "In Progress", "Completed" })
            {
                <option value="@s" selected="@(s==status)">@s</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label>Assignee</label>
        <select name="assignee_id" class="form-select">
            @foreach (var u in users)
            {
                var uid = u.TryGetProperty("id", out var idp) ? idp.GetInt32() : 0;
                var uname = u.TryGetProperty("name", out var n) ? n.GetString() : "Unknown";
                if (uid == 0) continue;
                <option value="@uid" selected="@(uid==assigneeId)">@uname</option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label>Progress (%)</label>
        <input type="number" name="progress_percentage" class="form-control" value="@progress" min="0" max="100" required />
    </div>
    <div class="col-12 mt-3">
        <button class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
